<h1>Articles Tagged with <%= @tag %></h1>

<ul>
	<% @tag.articles.each do |article| %>
		<li>
			<%= link_to article.title, article_path(article) %>
			<% if article.image.exists? %>
				<%= image_tag article.image.url(:thumb) %>
			<% end %>
		</li>

	<% end %>
</ul>
<br>
<%= link_to "<< See all Tags", tags_path %>